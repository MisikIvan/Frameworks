<h1>Teachers</h1>

<form method="get" class="mb-3">
    <input type="text" name="first_name" value="{{ app.request.get('first_name') }}" placeholder="First Name">
    <input type="text" name="last_name" value="{{ app.request.get('last_name') }}" placeholder="Last Name">
    <input type="text" name="email" value="{{ app.request.get('email') }}" placeholder="Email">

    <label>
        Items per page:
        <select name="itemsPerPage" onchange="this.form.submit()">
            <option value="5" {{ itemsPerPage == 5 ? 'selected' : '' }}>5</option>
            <option value="10" {{ itemsPerPage == 10 ? 'selected' : '' }}>10</option>
            <option value="20" {{ itemsPerPage == 20 ? 'selected' : '' }}>20</option>
        </select>
    </label>

    <button type="submit">Filter</button>
</form>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        {% for teacher in pagination %}
            <tr>
                <td>{{ teacher.firstName }}</td>
                <td>{{ teacher.lastName }}</td>
                <td>{{ teacher.email }}</td>
            </tr>
        {% else %}
            <tr><td colspan="3">No teachers found.</td></tr>
        {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(pagination) }}
